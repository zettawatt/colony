{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "notification:default",
    "dialog:default",
    "store:default",
    "shell:default",
    "shell:allow-execute",
    "shell:allow-spawn",
    "core:app:allow-set-app-theme",
    "log:default",
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        {
          "path": "$HOME/**"
        },
        {
          "path": "$DOWNLOAD/**"
        },
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$LOCALDATA/**"
        },
        {
          "path": "/home/**"
        },
        {
          "path": "/tmp/**"
        }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "colony-dweb",
          "sidecar": true
        },
        {
          "name": "dweb"
        }
      ]
    }
  ]
}
